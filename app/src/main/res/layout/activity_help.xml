<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/help_titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/help_title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_threeBandLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/three_band_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_threeBandTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/three_band_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/help_fourBandLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/four_band_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_fourBandTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/four_band_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/help_fiveBandLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/five_band_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_fiveBandTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/five_band_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/help_sixBandLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/six_band_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_sixBandTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/six_band_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/help_colorsLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/colors_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/colorsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/colors_text"
            android:textSize="16sp"
            android:lineSpacingExtra="8dp" />

    </LinearLayout>

</ScrollView>
